    .email-header h1 {
        margin: 0;
        font-size: 24px;
    }

    .email-body {
        padding: 32px;
        text-align: center;
    }

    .email-body h2 {
        font-size: 20px;
        margin-bottom: 16px;
    }

    .otp-box {
        display: inline-block;
        background: #f0f4ff;
        color: #1e40af;
        font-size: 32px;
        font-weight: bold;
        letter-spacing: 8px;
        padding: 14px 24px;
        border-radius: 10px;
        margin: 20px 0;
        user-select: all;
    }

    .email-footer {
        background-color: #f9fafb;
        padding: 20px;
        font-size: 12px;
        color: #6b7280;
        text-align: center;
    }

    @media (max-width: 600px) {
        .email-body {
            padding: 24px 16px;
        }

        .otp-box {
            font-size: 26px;
            letter-spacing: 6px;
        }
    }
</style>
